@model RegisterViewModel
@{
    Layout = null;
}


<!DOCTYPE html>

<html lang="en">
<head>
    <title>Kayıt Ol</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="/login-form-17/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">

            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-10">
                    <div class="wrap d-md-flex">
                        <div class="text-wrap p-4 p-lg-5 text-center d-flex align-items-center order-md-last">
                            <div class="text w-100">
                                <h2>Kayıt Olma Sayfası</h2>
                                <p>Hesabınız var mı?</p>
                                <a href="/Login/UserLogin/" class="btn btn-white btn-outline-white">Giriş yap</a>
                            </div>
                        </div>
                        <div class="login-wrap p-4 p-lg-5">

                            <form class="signin-form" method="post">
                                <div class="form-group mb-3">
                                    <label class="label" >AD</label>
                                    <input type="text" class="form-control" placeholder="Adınız" asp-for="Name" required>
                                </div>

                                <div class="form-group mb-3">
                                    <label class="label">SOYAD</label>
                                    <input type="text" class="form-control" placeholder="Soyadınız" asp-for="Surname" required>
                                </div>

                                <div class="form-group mb-3">
                                    <label class="label" >KULLANICI AD</label>
                                    <input type="text" class="form-control" placeholder="Kullanıcı Adınız" asp-for="Username" required>
                                </div>

                                <div class="form-group mb-3">
                                    <label class="label" >EMAİL ADRES</label>
                                    <input type="email" class="form-control" placeholder="Email Adresiniz" asp-for="Email" required>
                                </div>

                                <div class="form-group mb-3">
                                    <label class="label" >ŞİFRE</label>
                                    <input type="password" class="form-control" placeholder="Şifreniz" asp-for="Password" required>
                                </div>
                                
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                                <button type="submit" class="form-control btn btn-primary submit px-3">Kayıt Ol</button>



                
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="/login-form-17/js/jquery.min.js"></script>
    <script src="/login-form-17/js/popper.js"></script>
    <script src="/login-form-17/js/bootstrap.min.js"></script>
    <script src="/login-form-17/js/main.js"></script>

</body>
</html>



