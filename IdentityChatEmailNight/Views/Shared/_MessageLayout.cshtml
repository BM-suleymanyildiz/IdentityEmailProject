@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Admin Paneli</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="shortcut icon" href="/theme/assets/compiled/svg/favicon.svg" type="image/x-icon" />
    <link rel="stylesheet" href="/theme/assets/compiled/css/app.css" />
    <link rel="stylesheet" href="/theme/assets/compiled/css/app.css" />
    <link rel="stylesheet" href="/theme/assets/compiled/css/iconly.css" />
</head>

<body>
    <script src="~/assets/static/js/initTheme.js"></script>
    <div id="app">
        <div id="sidebar">
            <div class="sidebar-wrapper active">
                <div class="sidebar-header position-relative">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="logo">
                            <a href="#"><img src="/theme/assets/compiled/svg/YıldızS-renkli-large.svg" alt="Logo" style="width: 200px; height: auto;" /></a>
                        </div>
                    </div>
                </div>
                <div class="sidebar-menu">
                    <ul class="menu">
                        

                        <li class="sidebar-item">
                            <a href="/Profile/UserInfo" class="sidebar-link">
                                <i class="bi bi-person"></i>
                                <span>Profilim</span>
                            </a>
                        </li>

                        <li class="sidebar-item has-sub">
                            <a href="#" class="sidebar-link">
                                <i class="bi bi-chat-dots"></i>
                                <span>Mesajlarım</span>
                            </a>
                            <ul class="submenu">
                                <li class="submenu-item">
                                    <a href="/Message/Inbox">
                                        Gelen Mesajlar
                                        @if (ViewBag.InboxCount != null)
                                        {
                                            <span class="badge bg-primary">@ViewBag.InboxCount</span>
                                        }
                                    </a>
                                </li>
                                <li class="submenu-item">
                                    <a href="/Message/Sendbox">
                                        Giden Mesajlar
                                        @if (ViewBag.SendboxCount != null)
                                        {
                                            <span class="badge bg-primary">@ViewBag.SendboxCount</span>
                                        }
                                    </a>
                                </li>
                                <li class="submenu-item">
                                    <a href="/Message/CreateMessage">Yeni Mesaj Oluştur</a>
                                </li>
                                <li class="submenu-item">
                                    <a href="/Message/TrashBox">
                                        Çöp Kutusu
                                        @if (ViewBag.TrashCount != null)
                                        {
                                            <span class="badge bg-primary">@ViewBag.TrashCount</span>
                                        }
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="sidebar-item">
                            <a href="/Profile/Profile" class="sidebar-link">
                                <i class="bi bi-gear"></i>
                                <span>Kullanıcı Güncelleme</span>
                            </a>
                        </li>

                        <li class="sidebar-item">
                            <form method="post" action="/Auth/Logout" style="border: none; background: none;">
                                <button type="submit" class="sidebar-link" style="border: none; background: none;">
                                    <i class="bi bi-box-arrow-right"></i>
                                    <span>Çıkış</span>
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div id="main">
            <header class="mb-3">
                <a href="#" class="burger-btn d-block d-xl-none">
                    <i class="bi bi-justify fs-3"></i>
                </a>
            </header>

          
            @RenderBody()

         
        </div>
    </div>

    <script src="/theme/assets/static/js/components/sidebar.js"></script>
    <script src="/theme/assets/extensions/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script src="/theme/assets/compiled/js/app.js"></script>
</body>

</html>
